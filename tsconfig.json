{
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"],
            "@/test-utils": ["./__dev__/test-utils"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react"
    },
    "exclude": ["./dist/**"]
}
