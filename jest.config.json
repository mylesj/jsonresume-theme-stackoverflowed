{
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "restoreMocks": true,
    "timers": "modern",
    "moduleNameMapper": {
        "~/(.*)": "<rootDir>/src/$1",
        "@/test-utils": "<rootDir>/src/__dev__/test-utils"
    },
    "collectCoverageFrom": [
        "<rootDir>/src/**/*.{ts,tsx}",
        "!<rootDir>/node_modules/**",
        "!<rootDir>/src/__dev__/**"
    ],
    "globals": {
        "ts-jest": {
            "isolatedModules": true
        }
    }
}
